{
  "name": "etholow",
  "version": "0.1.4",
  "description": "tools to create interactive fiction and text adventures",
  "bin": {
    "etholow": "./bin/etholow.js"
  },
  "scripts": {
    "mocha": "istanbul cover _mocha",
    "eslint": "eslint . --ignore-path .gitignore",
    "view_coverage": "open coverage/lcov-report/index.html",
    "upload_coverage": "cat coverage/lcov.info | coveralls",
    "test": "npm run mocha && npm run eslint",
    "packageList": "bash -c \"tar -tf $(npm pack)\"",
    "start": "etholow test/games/basic"
  },
  "main": "index.js",
  "author": {
    "name": "Ruan Pearce-Authers",
    "email": "ruanpa@outlook.com"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "co": "^4.6.0",
    "pegjs": "^0.9.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.9",
    "eslint": "^2.13.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "mocha-generators": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/returnString/etholow"
  },
  "bugs": {
    "url": "https://github.com/returnString/etholow/issues"
  }
}
